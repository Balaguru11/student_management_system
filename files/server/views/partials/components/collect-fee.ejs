<div class="container p-1">
    <div class="row d-flex justify-content-center">
      <div class="col-lg-12 col-md-12 col-sm-12">
<form id="addclass-form" action="/school/add-classroom" method="POST">
    <div class="mt-3 mb-3">
      <h2 class="text-center">Student Admission</h2>
      <p class="text-center">
        <small>Adding a Student to the school.</small>
      </p>
      <hr />
    </div>
    <div class="mb-3">
      <label for="name">Name:</label>
      <input
        type="text"
        class="form-control"
        name="name"
        id="name"
        placeholder="Name of the Student"
      />
      <span class="error" id="name_error"
        >Student name should be at least 3 characters long.</span
      >
    </div>
    <div class="mb-3">
        <label for="mobile">Mobile Number: </label>
        <input type="tel" class="form-control"
        name="mobile"
        id="mobile">
        <span class="error" id="mobile_error">Please enter the Student's 10 Digit Mobile Number.</span>
    </div>
    <div class="mb-3">
        <label for="email">Email ID: </label>
        <input type="email" class="form-control"
        name="email"
        id="email">
        <span class="error" id="email_error">Please enter the Student's Email.</span>
    </div>
    <div class="mb-3">
        <label for="academic_year">Fee Paying for the Acadmic Year: </label>
        <input type="number" class="form-control"
        name="academic_year"
        id="academic_year"
        placeholder="Follow the Format: 202X-202X">
        <span class="error" id="academic_year_error">Please enter the academic year.</span>
    </div>
    <div class="mb-3">
        <label for="fee_amount">Fee Amount: </label>
        <input type="number" class="form-control"
        name="fee_amount"
        id="fee_amount"
        placeholder="in INR">
        <span class="error" id="fee_amount_error">Fee Amount should not be empty.</span>
    </div>
    <div class="mb-3">
        <label for="fee_paid">Fee Paid: </label>
        <input type="number" class="form-control"
        name="fee_paid"
        id="fee_paid"
        placeholder="in INR">
        <span class="error" id="fee_paid_error">Paid Fee should not be empty.</span>
    </div>
    <div class="mb-3">
        <label for="fee_paid_date">Fee Paid Date: </label>
        <input type="date" class="form-control"
        name="fee_paid_date"
        id="fee_paid_date"
        placeholder="Date of Payment">
        <span class="error" id="fee_paid_date">Please enter the date when the fee received to the School Bank Account.</span>
    </div>
    <div class="mb-3">
      <label for="payment_mode">Mode of Payment:</label>
      <select id="payment_mode" class="form-control" name="payment_mode">
        <option value="">Select One</option>
        <option value="cash">Cash</option>
        <option value="card">Debit / Credit Card</option>
        <option value="cheque">Cheque</option>
        <option value="netbanking">Netbanking</option>
      </select>
      <span class="error" id="payment_mode_error"
        >Please select the Payment Mode.</span
      >
    </div>
    <div class="mb-3">
        <label for="due_status">Fee Due Status:</label>
        <select id="due_status" class="form-control" name="due_status" disabled>
          <option value="paid">Fully Paid</option>
          <option value="due">Pending</option>
          <option value="notpaid">Not Paid</option>
        </select>
        <span class="error" id="payment_mode_error"
          >Please select the Payment Mode.</span
        >
      </div>

    <div class="mb-3">
      <button class="btn btn-secondary" type="submit" value="submit">
       Add Record
      </button>
    </div>
  </form>
  </div></div></div>