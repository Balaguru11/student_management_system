
            <form id="addclass-form" action="../dashboard/fee-structure" method="POST">
                <div class="mt-3 mb-3">
                  <h2 class="text-center">Create a Class Standard</h2>
                  <p class="text-center">
                    <small>Adding Class Standard to the school.</small>
                  </p>
                  <hr />
                </div>
                
                <div class="row justify-content-center">
                  <div class="col-lg-4 col-xl-4 col-md-4 col-sm-10">
                    <div class="mb-3">
                      <label for="class_std">Class Std:</label>
                      <input type="text" class="form-control" name="class_std" id="class_std" max="11" placeholder="Very first class, you would like to start for this batch"/>
                      <span class="error" id="class_std_error"
                        >Please Enter Class Standard.</span
                      >
                    </div>
                  </div>
                  <div class="col-lg-4 col-xl-4 col-md-4 col-sm-10">                    
                    <div class="mb-3">
                      <label for="medium">Creating Classes for _____ Medium:</label>
                      <select id="medium" class="form-control" name="medium" required>
                        <option value="">Select One</option>
                        <option value="Tamil">Tamil</option>
                        <option value="English">English</option>
                        <option value="Hindi">Hindi</option>
                      </select>
                      <span class="error" id="medium_error"
                        >Please select the Medium.</span
                      >
                    </div>
                  </div>
                  <div class="col-lg-4 col-xl-4 col-md-4 col-sm-10">
                    <div class="mb-3">
                      <label for="academic_month">Academic Month (Start):</label>
                      <select id="academic_month" class="form-control" name="academic_month" required>
                        <option value="">Select Academic starting Month</option>
                        <option value="1">January</option>
                        <option value="2">February</option>
                        <option value="3">March</option>
                        <option value="4" selected>April</option>
                        <option value="5">May</option>
                        <option value="6">June</option>
                        <option value="7">July</option>
                        <option value="8">August</option>
                        <option value="9">September</option>
                        <option value="10">October</option>
                        <option value="11">November</option>
                        <option value="12">December</option>
                      </select>
                      <span class="error" id="academic_month_error"
                        >Please select the Academic Month.</span
                      >
                    </div>
                  </div>
                </div>
                <div class="mb-3" id="class_std_dyna">
                  <% if (locals.batch.length != 0) { %>
                    <label for="batch_id">Select a Batch:</label>
                    <select id="batch_id" class="form-control" name="batch_id" required>
                      <option value="">Select One</option>
                        <% for (let i=0; i < locals.batch.length; i++) { %>
                          <option value="<%= locals.batch[i].id %>"><%= locals.batch[i].batch_name %> (<%= locals.batch[i].year_from %> - <%= locals.batch[i].year_to %>)</option>
                      <% } %>
                    </select>
                  <% } %>
                  
                  <% if (locals.batch.length == '0') { %>
                    <p class="alert alert-warning">You are required to create atleast a Batch before creating class standard.</p>
                    <a role="button" class="btn btn-warning" href="/school/dashboard/batch">Add A Batch</a>
                  <% } %>
                  <span class="error" id="batch_id_error"
                    >Please select A Batch.</span
                  >
                </div>
              
                
                <% if (locals.batch.length != 0) { %>
                  <div class="mb-3">
                    <button class="btn btn-secondary" id="add_fee_struc"  type="submit" value="submit">
                      Submit Fee Structure
                    </button>
                  </div>
                <% } %>
                
              </form>