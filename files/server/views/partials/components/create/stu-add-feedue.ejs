<form
  id="collect-fee-form"
  action="/student/admission-fee-payment"
  method="POST"
>
  <div class="mb-3">
    <h2 class="text-center">Student Paying Fee Due</h2>
    <hr />
  </div>
  <!-- card to search for student data and display -->
  <div class="p-2">
    <div class="mt-1 mb-3">
      <input
        type="hidden"
        class="form-control"
        name="stuId_due_own"
        id="stuId_due_own"
        value="<%= row[0].student_id %>"
      />
      <input
        type="hidden"
        class="form-control"
        name="school_id_hide"
        id="school_id_hide"
        value="<%= row[0].school_id %>"
      /><input
        type="hidden"
        class="form-control"
        name="admission_id_hide"
        id="admission_id_hide"
        value="<%= row[0].admission_id %>"
      />
    </div>

    <div class="row g-3">
      <div class="col card bg-info border border-info shadow p-2 m-2 rounded">
        <div class="mb-3 mt-3">
          <label for="name">Hi, </label
          ><input
            type="text"
            class="form-control"
            name="name"
            id="name"
            placeholder="Student Name"
            disabled
            value="<%= row[0].name %>"
          /><input
            type="hidden"
            class="form-control"
            name="name_hide"
            id="name"
            placeholder="Student Name"
            value="<%= row[0].name %>"
          />
        </div>
        <div class="mb-3">
          <label for="name">Student Email ID: </label>
          <input
            type="email"
            class="form-control"
            name="email"
            id="email"
            placeholder="Email ID:"
            disabled
            value="<%= row[0].email %>"
          /><input
            type="hidden"
            class="form-control"
            name="email_hide"
            id="email"
            placeholder="Email ID:"
            value="<%= row[0].email %>"
          />
        </div>
        <div class="mb-3">
          <label for="name">Student Mobile No: </label>
          <input
            type="tel"
            class="form-control"
            placeholder="Mobile Number:"
            name="mobile"
            id="mobile"
            disabled
            value="<%= row[0].mobile_number %>"
          /><input
            type="hidden"
            class="form-control"
            placeholder="Mobile Number:"
            name="mobile_hide"
            id="mobile"
            value="<%= row[0].mobile_number %>"
          />
        </div>
      </div>
      <div
        class="col card bg-warning border border-warning shadow p-2 m-2 rounded"
      >
        <div class="mt-3 mb-3">
          <label for="class_medium">Class & Medium: </label>
          <input
            type="text"
            id="class_medium"
            class="form-control"
            name="class_medium"
            disabled
            value="<%= row[0].class_std %> Std - <%= row[0].medium %> Medium"
          /><input
            type="hidden"
            id="class_medium"
            class="form-control"
            name="class_medium_hide"
            value="<%= row[0].class_std %> Std - <%= row[0].medium %> Medium"
          />
        </div>
        <div class="mb-3">
          <label for="class_section">Class section: </label>
          <input
            type="text"
            id="class_section"
            class="form-control"
            name="class_section"
            disabled
            value="<%= row[0].class_section %> Section"
          /><input
            type="hidden"
            id="class_section"
            class="form-control"
            name="class_section_hide"
            value="<%= row[0].class_section %> Section"
          />
        </div>
        <div class="mb-3">
          <label for="academic_year">Academic Year: </label>
          <input
            type="text"
            class="form-control"
            name="academic_year"
            id="academic_year"
            disabled
            value="<%= row[0].academic_year %>"
          /><input
            type="hidden"
            class="form-control"
            name="academic_year_hide"
            id="academic_year"
            value="<%= row[0].academic_year %>"
          />
        </div>
      </div>
    </div>
  </div>
  <div class="row g-4 mt-1 mb-1"></div>
  <div class="row g-3">
    <div class="col">
      <label for="course_fee">Actual fee:</label
      ><input
        type="number"
        class="form-control"
        name="course_fee"
        id="course_fee"
        value="<%= row[0].actual_fee %>"
        disabled
      /><input
        type="hidden"
        class="form-control"
        name="course_fee_hide"
        id="course_fee"
        value="<%= row[0].actual_fee %>"
      />
    </div>
    <div class="col">
      <label for="paid_fee">Amount Paid so far:</label
      ><input
        type="number"
        class="form-control"
        name="paid_fee"
        id="paid_fee"
        value="<%= row[0].paying_amount %>"
        disabled
      /><input
        type="hidden"
        class="form-control"
        name="paid_fee_hide"
        id="paid_fee"
        value="<%= row[0].paying_amount %>"
      />
    </div>
  </div>
  <br />
  <% let max_amount = row[0].actual_fee - row[0].paying_amount %> <%
  if(max_amount == 0) { %>
  <div
    class="card p-1 bg-success border border-success shadow p-3 mb-3 rounded"
  >
    <h4 class="display-5 text-light text-center">Congrats. You have No Due.</h4>
  </div>
  <% } %> <% if(max_amount != 0){ %>
  <div
    class="
      card
      p-1
      bg-secondary
      border border-secondary
      shadow
      p-3
      mb-3
      rounded
    "
  >
    <div class="mb-1 mt-1">
      <label for="paying_fee" class="text-light">Amount Paying now:</label
      ><input
        type="number"
        class="form-control"
        name="paying_fee"
        id="paying_fee"
        min="0"
        max="<%= max_amount %>"
      />
    </div>

    <div class="mt-3 mb-3">
      <select
        id="payment_mode"
        class="form-control"
        name="payment_mode"
        aria-placeholder="Payment Mode:"
      >
        <option value="">Select Payment Mode</option>
        <option value="cash">Cash</option>
        <option value="card">Debit / Credit Card</option>
        <option value="cheque">Cheque</option>
        <option value="netbanking">Netbanking</option>
        <option value="emi">EMI</option>
      </select>
      <span class="error" id="payment_mode_error"
        >Please select the Payment Mode.</span
      >
    </div>

    <div class="mb-3">
      <button class="btn btn-outline-light" type="submit" value="submit">
        Add Fee Record
      </button>
    </div>
  </div>
  <% } %>
</form>
