<div class="pt-5">
    <h4 class="text-center">View Class Sections</h4><br>
    <table class="table table-light text-center">
      <thead>
        <tr>
        <th scope="col">S.No</th>
        <th width="200px">Class & Medium</th>
        <th width="200px">Section</th>
        <th width="200px">Total Seats</th>
        <th width="200px">Actions</th>
      </tr>
      </thead>
      <tbody>
        <% if(locals.data.length > 0) {                    
          for(var i = 0; i < locals.data.length; i++) {%>
            <tr>
              <th scope="row"><%= (i+1) %></th>
              <td><%= locals.data[i].class_std %> - <%= locals.data[i].medium %></td>
              <td><%= locals.data[i].class_section %></td>
              <td><%= locals.data[i].students_strength %></td>
              <td><a class="btn btn-warning edit" href="../dashboard/subjects/edit/<%= locals.data[i].id %>">Edit</a> <a class="btn btn-danger delete" href="../dashboard/subjects/delete/<%= locals.data[i].id %>">Delete</a></td>                                            
            </tr>
      <%  }
          } else { %>
                <tr>
                  <td colspan="5" class="text-center"><mark>No Class Sections found.</mark></td>
                </tr>
          <% } %>
      </tbody>
    </table>
  </div>