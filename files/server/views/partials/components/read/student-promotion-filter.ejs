
            <form id="addclass-form" action="../dashboard/fee-structure" method="POST">
              <div class="mt-3 mb-3">
                <h2 class="text-center">Promotion Filter</h2>
                <p class="text-center">
                  <small>See Batch Students to Promote</small>
                </p>
                <hr />
              </div>
              <!-- hidden field here <%= locals.batchSelected %> -->
              <input type="hidden" name="batch_query" id="batch_query" value="<%= locals.batchSelected %>">
              <input type="hidden" name="std_query" id="std_query" value="<%= locals.stdSelected %>">
              <div class="row justify-content-center align-center bg-secondary rounded mx-5" id="filter_main">
                <div class="col-lg-5 col-xl-5 col-md-5 col-sm-10" id="batch_filter">
                 
                  <div class="mt-3 mb-3">
                    <% if (locals.batch.length != 0) { %>
                      <select id="batch_id_filter" class="form-control" name="batch_id_filter" required >
                        <option value="">Select a Batch</option>
                          <% for (let i=0; i < locals.batch.length; i++) { %>
                            <option value="<%= locals.batch[i].id %>"><%= locals.batch[i].batch_name %> (<%= locals.batch[i].year_from %> - <%= locals.batch[i].year_to %>)</option>
                        <% } %>
                      </select>
                    <% } %>
                    
                    <% if (locals.batch.length == '0') { %>
                      <p class="alert alert-warning">You are required to create atleast a Batch before creating class standard.</p>
                      <a role="button" class="btn btn-warning" href="../dashboard/batch">Add A Batch</a>
                    <% } %>
                    <span class="error" id="batch_id_error"
                      >Please select A Batch.</span
                    >
                  </div>
                </div>
                <div class="col-lg-5 col-xl-5 col-md-5 col-sm-10" id="class_medium_filter">                    
                  <div class="mt-3 mb-3">
                    <select id="class_medium" class="form-control" name="class_medium" required>
                      <option value="">Select A Class STD</option>                     
                    </select><span class="error" id="class_medium_error"
                      >Please select A Class Medium.</span></div>
                  </div>
              </div> 
            </form>


            <!-- view modal -->
            <div role="dialog" class="modal fade bd-example-modal-xl" id="viewPromoteModal" tabindex="-1" aria-labelledby="viewModalLabel" aria-hidden="true">
              <div class="modal-dialog modal-xl">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="viewPromoteModalLabel"></h5>
                    <button type="button" class="btn-close" id="close_promote" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="viewPromote-modal-body"></div>
                </div>
              </div>
            </div>

            