    <div class="container-fluid p-3">
        <div class="row d-flex justify-content-center mt-5 bg-info">
            
            <div class="col-6 justify-content-center m-4">
                <h2 class="display-5 text-center"> One Stop Solution to Manage your School.</h2><br>
                <div class="text-center">
                    <h5>Lets get started by adding the school you want to manage.</h5>
                    <a class="btn btn-dark" role="button" href="/school/create"><i class="far fa-plus-square"></i> Add School</a>
                </div>
            </div>
        </div>
    </div>
    <div class="container p-2">
        <div class="row d-flex justify-content-center">
            <div class="col-lg-6 col-md-6 col-sm-10 mt-3">
                    <% if(locals.err_msg.length > 0) { %>
                        <div class="alert alert-danger alert-dismissible fade show mt-5" role="alert">
                            <%- err_msg %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                          </div>
                    <% } %>
                    <% if(locals.success_msg.length > 0) { %>
        
                                <div class="alert alert-success alert-dismissible fade show mt-5" role="alert">
                                    <%= success_msg %>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                  </div>
                    <% } %>
            </div>
        </div>
    </div>
    <div class="container pb-5">
            <div class="row d-flex mt-5 justify-content-center">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 align-middle px-5">
                   <div class="text-center">
                    <span class="iconsizing">
                        <i class="fas fa-school"></i>
                      </span>
                   </div>
                   <br>
                    <form id="school_login" action="/school/login" method="POST">
                        <div class="mt-3 mb-3">
                            <h4 class="text-center">School Master Login</h4>
                            <hr>
                        </div>
                        <div class="mt-3 mb-3">
                            <label for="school_UserName">School Username:</label>
                            <input type="text" class="form-control" name="schoolUserName" id="schoolUserName">
                        </div>
                        <div class="mb-3">
                            <label for="School_Password">School Password:</label>
                            <input type="password" class="form-control" name="schoolPassword" id="schoolPassword">
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-primary" type="submit" value="submit">Login</button>
                        </div>
                    </form>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 align-top px-5">
                    <div class="text-center">
                        <span class="iconsizing">
                            <i class="fas fa-user"></i>
                          </span>
                       </div>
                       <br>
                    <ul class="nav nav-pills nav-fill mb-3" id="pills-tab" role="tablist">
                        <li class="nav-item" role="presentation">
                          <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Student Login</button>
                        </li>
                        <li class="nav-item" role="presentation">
                          <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Staff Login</button>
                        </li>
                    </ul>
                    <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                        <form id="studentlogin-form" method="POST" action="/student/login">
                            <div class="mt-3 mb-3">
                                <label for="username">Username:</label>
                                <input type="text" class="form-control" name="username" placeholder="Username" id="username">
                                <span class="error" id="username-error">Username should be at least 3 characters long.</span>
                            </div>
                            <div class="mb-3">
                                <label for="password">Password:</label>
                                <input type="password" class="form-control" name="password" placeholder="Type your Password here" id="password">
                                <span class="error" id="password-error">Password should contain 8 characters with a Uppercase, a lowercase, a Number and a Special character.</span>
                            </div>
                            <div class="login">
                                <button class="btn btn-primary" type="submit">Login</button>
                            </div>
                        </form>
                    </div>
                    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                        <form id="stafflogin-form" method="POST" action="/staff/login">
                            <div class="mt-3 mb-3">
                                <label for="select">Role:</label>
                                <select id="role" name="role" class="form-control">
                                    <% if(locals.data.length > 0) {                    
                                        for(var i = 1; i < locals.data.length; i++) { %>
                                            <option value="<%= locals.data[i].id %>"><%= locals.data[i].role_name %></option>
                                    <%  } }%>
                                    </select>
                                <span class="error" id="role-error">You have chosen a wrong role.</span>
                            </div>
                            <div class="mb-3">
                                <label for="username">Username:</label>
                                <input type="text" class="form-control" name="username" placeholder="Username" id="username">
                                <span class="error" id="username-error">Username should be at least 3 characters long.</span>
                            </div>
                            <div class="mb-3">
                                <label for="password">Password:</label>
                                <input type="password" class="form-control" name="password" placeholder="Type your Password here" id="password">
                                <span class="error" id="password-error">Password should contain 8 characters with a Uppercase, a lowercase, a Number and a Special character.</span>
                            </div>
                            <div class="login">
                                <button class="btn btn-primary" type="submit">Login</button>
                            </div>
                        </form>
                    </div>
                    </div>
                </div>
            </div>
    </div>