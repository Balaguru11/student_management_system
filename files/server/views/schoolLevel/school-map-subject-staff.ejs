<div class="container pt-5">
    <div class="row d-flex justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10 pt-4">
            <% if(locals.err_msg.length > 0) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= err_msg %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  </div>
            <% } %>
            <% if(locals.success_msg.length > 0) { %>
              <div class="alert alert-success alert-dismissible fade show" role="alert">
                  <%= success_msg %>
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
          <% } %>
        </div>
    </div>
</div>
<div class="container pt-3">
    <div class="row">
        <div class="col-lg-4 col-sm-12">
            <div class="pt-5 p-2 sticky-top bg-light">
                <%- include ('../partials/components/sub-staff-mapping') %>
            </div>
        </div>
        <div class="col-lg-8 col-sm-12 overflow-auto border">
          <div class="pt-5">
            <h4 class="text-center">Assign Class-section, Staff & Subject</h4><br>
            <table class="table table-light text-center">
              <thead>
                <tr>
                <th scope="col">S.No</th>
                <th width="250px">Class-Section - Medium</th>
                <th width="200px">Subjects</th>
                <th width="200px">Faculty</th>
                <th width="200px">Actions</th>
              </tr>
              </thead>
              <tbody>
                <% if(locals.result.length > 0) {                    
                  for(var i = 0; i < locals.result.length; i++) {%>
                    <tr>
                      <th scope="row"><%= (i+1) %></th>
                      <td><b><%= locals.result[i].class_std %></b> std-<b><%= locals.result[i].medium %></b> Medium - <b><%= locals.result[i].class_section %></b> Sec</td>
                      <td><%= locals.result[i].subject_name %></td>
                      <td><%= locals.result[i].username %></td>
                      <td><a class="btn btn-warning edit" href="../dashboard/section-subject-staff/edit/<%= locals.result[i].id %>">Edit</a> <a class="btn btn-danger delete" href="../dashboard/section-subject-staff/delete/<%= locals.result[i].id %>">Delete</a></td>                                            
                    </tr>
              <%  }
                  } else { %>
                        <tr>
                          <td colspan="5" class="text-center"><mark>No Class / Sections / Staff assigned.</mark></td>
                        </tr>
                  <% } %>
              </tbody>
            </table>
          </div>
      </div>
    </div>
</div>