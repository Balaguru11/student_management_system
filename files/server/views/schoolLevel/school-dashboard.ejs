<div class="container p-5">
  <div class="row d-flex justify-content-center">
    
    <!-- <h2 class="text-center">School Master Dashboard</h2> -->
    <% if(locals.welcome_msg) { %>
      <div class="row">
        <div class="col-6">
          <h4><%= welcome_msg %></h4>
        </div>
      </div>
      
    <% } %>
    <% if(locals.err_msg.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= err_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
   <% } %>

    <% if(locals.success_msg.length > 0) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <!-- When Inactive -->
    <% if(locals.status == "Inactive") { %>
      <!-- Inactive Part -->
      <%- include ('../partials/components/school-inactive') %>
      
      <% } else { %>  
        <!-- active part -->
      <div class="col-lg-6 col-md-8 col-sm-10">
        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
          <li class="nav-item" role="presentation">
            <button
              class="nav-link"
              id="pills-fee-tab"
              data-bs-toggle="pill"
              data-bs-target="#pills-fee"
              type="button"
              role="tab"
              aria-controls="pills-fee"
              aria-selected="false"
            >
              Add Fee Structure
            </button>
          </li>
          <li class="nav-item" role="presentation">
            <button
              class="nav-link"
              id="pills-staff-tab"
              data-bs-toggle="pill"
              data-bs-target="#pills-staff"
              type="button"
              role="tab"
              aria-controls="pills-staff"
              aria-selected="false"
            >
              Add Users
            </button>
          </li>
          <li class="nav-item" role="presentation">
            <button
              class="nav-link"
              id="pills-subject-tab"
              data-bs-toggle="pill"
              data-bs-target="#pills-subject"
              type="button"
              role="tab"
              aria-controls="pills-subject"
              aria-selected="false"
            >
              Add Subject
            </button>
          </li>
          <li class="nav-item" role="presentation">
            <button
              class="nav-link active"
              id="pills-classroom-tab"
              data-bs-toggle="pill"
              data-bs-target="#pills-classroom"
              type="button"
              role="tab"
              aria-controls="pills-classroom"
              aria-selected="true"
            >
              Add Class Sections
            </button>
          </li>
        </ul>
        <div class="tab-content" id="pills-tabContent">
          <div
            class="tab-pane fade show active"
            id="pills-classroom"
            role="tabpanel"
            aria-labelledby="pills-classroom-tab"
          >

          <%- include ('../partials/components/add-class-section') %>
        </div>
          <div
            class="tab-pane fade"
            id="pills-staff"
            role="tabpanel"
            aria-labelledby="pills-staff-tab"
          >
          <%- include ('../partials/components/add-user') %>
          </div>
          <div
            class="tab-pane fade"
            id="pills-subject"
            role="tabpanel"
            aria-labelledby="pills-subject-tab"
          >
          <%- include ('../partials/components/add-subject') %>
          </div>
          <div
            class="tab-pane fade"
            id="pills-fee"
            role="tabpanel"
            aria-labelledby="pills-fee-tab"
          >
            
          <%- include ('../partials/components/add-fee-structure') %>

        </div>
        </div>
      </div>
    </div>
      <% } %>
  </div>
</div>
