<div class="container p-5">
    <divrow class="d-flex justify-content-center">
        <div class="col-lg-6 col-md-8 col-m-10">
            <% if(locals.err_msg) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= err_msg %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <% } %> <% if(locals.success_msg) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <%= locals.success_msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>
            <form id="school_login" action="/school/login" method="POST">
                <div class="mt-3 mb-3">
                    <h2>School Master Login</h2>
                    <hr>
                </div>
                <div class="mt-3 mb-3">
                    <label for="school_UserName">School Username:</label>
                    <input type="text" class="form-control" name="schoolUserName" id="schoolUserName">
                </div>
                <div class="mb-3">
                    <label for="School_Password">School Password:</label>
                    <input type="password" class="form-control" name="schoolPassword" id="schoolPassword">
                </div>
                <div class="mb-3">
                    <button class="btn btn-secondary" type="submit" value="submit">Login</button>
                </div>
            </form>
        </div>
    </divrow>
</div>