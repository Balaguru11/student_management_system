        <div class="col-xl-8 col-lg-8 col-sm-10 overflow-auto border">
            <div class="row">
                <div class="col-8">
                    <h2><%= name %>'s Profile</h2>
                </div>
    
                <div class="col-4">
                    <a class="btn btn-secondary" role="button" href="/student/profile-edit">Edit Profile</a>
                </div>
                <hr>
            </div>

            <div class="row">
                <div class="col-6">
                    <b>Name</b>
                </div>
                <div class="col-6">
                    <p> <%= name %></p>
                </div>
                <div class="col-6">
                    <b>Mobile Number</b>
                </div>
                <div class="col-6">
                    <p> <%= mobile_number %></p>
                </div>
                <div class="col-6">
                    <b>Email ID: </b>
                </div>
                <div class="col-6">
                    <p> <%= email %></p>
                </div>
                <div class="col-6">
                    <b>Father's Name: </b>
                </div>
                <div class="col-6">
                    <p> <%= father_name %></p>
                </div>
                <div class="col-6">
                    <b>Date of Birth: </b>
                </div>
                <div class="col-6">
                    <p> <%= date_of_birth %></p>
                </div>
                <div class="col-6">
                    <b>City: </b>
                </div>
                <div class="col-6">
                    <p> <%= city %></p>
                </div>
                <div class="col-6">
                    <b>State: </b>
                </div>
                <div class="col-6">
                    <p> <%= state %></p>
                </div>
            </div>
        </div>
    </div>
</div>
    <!-- closing tags from school-sidebarMenu -->
</div>
</div>
</div>



            
            
