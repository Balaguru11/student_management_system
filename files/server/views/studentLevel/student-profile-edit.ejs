<%- include ('../partials/components/student-sideMenu') %>
<div class="container-fluid p-2">
    <div class="row d-flex justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10 mt-3">
            <% if(locals.err_msg.length > 0) { %>
                <div class="alert alert-danger alert-dismissible fade show mt-5" role="alert">
                    <%= err_msg %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  </div>
            <% } %>
            <% if(locals.success_msg.length > 0) { %>
              <div class="alert alert-success alert-dismissible fade show mt-5" role="alert">
                  <%= success_msg %>
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
          <% } %>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row mt-5 justify-content-center">
        <div class="col-xl-8 col-lg-8 col-sm-10 overflow-auto border">
            <form id="staff-profile" action="/student/profile-edit?_method=PUT" method="POST">
                <div class="mt-3 mb-3">
                    <div class="row">
                    <div class="col-12">
                        <h2><%= name %>'s Profile</h2>
                    </div>
            
                    <hr>
                </div></div>
                <div class="mb-3">
                    <label for="student_Name">Name:</label>
                    <input type="text" class="form-control" name="studentName" id="studentName" value="<%= name %>" disabled>
                </div>
                <div class="mb-3">
                    <label for="student_mobile">Mobile Number:</label>
                    <input type="tel" class="form-control" name="student_mobile" id="student_mobile"  value="<%= mobile_number %>" disabled>
                </div>
                <div class="mb-3">
                    <label for="student_email">Email:</label>
                    <input type="email" class="form-control" name="student_email" id="student_email" value="<%= email %>" disabled>
                </div>
                <div class="mb-3">
                    <label for="father_name">Father's Name:</label>
                    <input type="text" class="form-control" name="father_name" id="father_name" value="<%= father_name %>" disabled>
                </div>
                <div class="mb-3">
                    <label for="parent_mobile">Father / Mother's Mobile Number:</label>
                    <input type="tel" class="form-control" name="parent_mobile" id="parent_mobile" value="<%= parent_mobile %>" disabled>
                </div>
                <div class="mb-3">
                    <label for="parent_email">Father / Mother's Email:</label>
                    <input type="email" class="form-control" name="parent_email" id="parent_email" value="<%= parent_email %>" disabled>
                </div>
                <div class="mb-3">
                    <label for="student_dob">Date of Birth:</label>
                    <input type="date" class="form-control" name="student_dob" id="student_dob" value="<%= date_of_birth %>" disabled>
                </div>
                <div class="mb-3">
                    <label for="student_city">City:</label>
                    <input type="text" class="form-control" name="student_city" id="student_city" value="<%= city %>"> 
                </div>
                <div class="mb-3">
                    <label for="student_state">State Belongs to:</label>
                    <input type="text" class="form-control" name="student_state" id="student_state" value="<%= state %>">
                </div>
                <div class="mb-3">
                    <button class="btn btn-secondary" type="submit" value="submit">Update Profile</button>
                </div>
            </form>
        </div>
    </div>
</div>
    <!-- closing tags from school-sidebarMenu -->
</div>
</div>
</div>