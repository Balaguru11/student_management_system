<%- include ('../partials/components/staff-sideMenu') %>
<div class="container-fluid p-2">
    <div class="row d-flex justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10 mt-3">
            <% if(locals.err_msg.length > 0) { %>
                <div class="alert alert-danger alert-dismissible fade show mt-5" role="alert">
                    <%= err_msg %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  </div>
            <% } %>
            <% if(locals.success_msg.length > 0) { %>
              <div class="alert alert-success alert-dismissible fade show mt-5" role="alert">
                  <%= success_msg %>
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
          <% } %>
        </div>
    </div>
</div>

<div class="container p-2">
    <div class="row mt-5 justify-content-center">
       
        <div class="col-xl-8 col-lg-8 col-sm-10 overflow-auto border m-2">
            <div class="row">
                <div class="col-8">
                    <h2>Staff Profile</h2>
                </div>
    
                <div class="col-4">
                    <a class="btn btn-secondary" role="button" href="/staff/profile-edit">Edit Profile</a>
                </div>
                <hr>
            </div>

            <div class="row">
                <div class="col-lg-6 col-md-4 col-sm-3">
                    <b>Name</b>
                </div>
                <div class="col-lg-6 col-md-8 col-sm-9">
                    <p> <%= name %></p>
                </div>
                <div class="col-lg-6 col-md-4 col-sm-3">
                    <b>Date of Birth: </b>
                </div>
                <div class="col-lg-6 col-md-8 col-sm-9">
                    <p> <%= date_of_birth %></p>
                </div>
                <div class="col-lg-6 col-md-4 col-sm-3">
                    <b>Mobile Number: </b>
                </div>
                <div class="col-lg-6 col-md-8 col-sm-9">
                    <p> <%= mobile_number %></p>
                </div>
                <div class="col-lg-6 col-md-4 col-sm-3">
                    <b>Email ID: </b>
                </div>
                <div class="col-lg-6 col-md-8 col-sm-9">
                    <p> <%= email %></p>
                </div>
                <div class="col-lg-6 col-md-4 col-sm-3">
                    <b>Qualification: </b>
                </div>
                <div class="col-lg-6 col-md-8 col-sm-9">
                    <p> <%= qualification %></p>
                </div>
                <div class="col-lg-6 col-md-4 col-sm-3">
                    <b>City: </b>
                </div>
                <div class="col-lg-6 col-md-8 col-sm-9">
                    <p> <%= city %></p>
                </div>
                <div class="col-lg-6 col-md-4 col-sm-3">
                    <b>State: </b>
                </div>
                <div class="col-lg-6 col-md-8 col-sm-9">
                    <p> <%= state %></p>
                </div>
            </div>
        </div>
    </div>
</div>
    <!-- closing tags from school-sidebarMenu -->
</div>
</div>
</div>