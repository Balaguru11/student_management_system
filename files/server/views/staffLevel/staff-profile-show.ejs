<div class="container p-5">
    <divrow class="d-flex justify-content-center">
        <div class="col-lg-6 col-md-8 col-m-10">
            <% if(locals.err_msg.length > 0) { %>
                <div class="alert alert-danger" role="alert"><%= err_msg %></div>
                <% } %> <% if(locals.success_msg.length > 0) { %>
                <div class="alert alert-success" role="success">
                    <%= success_msg %>
                </div>
                <% } %>
            <div class="row">
                <div class="col-8">
                    <h2>Staff Profile</h2>
                </div>
    
