                    <p>Date of Birth: </p>
                </div>
                <div class="col-lg-6">
                    <p> <%= date_of_birth %></p>
                </div>
                <div class="col-lg-6">
                    <p>Mobile Number: </p>
                </div>
                <div class="col-lg-6">
                    <p> <%= mobile_number %></p>
                </div>
                <div class="col-lg-6">
                    <p>Email ID: </p>
                </div>
                <div class="col-lg-6">
                    <p> <%= email %></p>
                </div>
                <div class="col-lg-6">
                    <p>Qualification: </p>
                </div>
                <div class="col-lg-6">
                    <p> <%= qualification %></p>
                </div>
                <div class="col-lg-6">
                    <p>City: </p>
                </div>
                <div class="col-lg-6">
                    <p> <%= city %></p>
                </div>
                <div class="col-lg-6">
                    <p>State: </p>
                </div>
                <div class="col-lg-6">
                    <p> <%= state %></p>
                </div>
            </div>
            
