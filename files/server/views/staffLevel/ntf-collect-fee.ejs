<%- include ('../partials/components/staff-sideMenu') %>
<div class="container-fluid p-2">
    <div class="row d-flex justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10 mt-3">
            <% if(locals.err_msg.length > 0) { %>
                <div class="alert alert-danger alert-dismissible fade show mt-5" role="alert">
                    <%= err_msg %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  </div>
            <% } %>
            <% if(locals.success_msg.length > 0) { %>
              <div class="alert alert-success alert-dismissible fade show mt-5" role="alert">
                  <%= success_msg %>
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
          <% } %>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row mt-5">
        <div class="col-xl-4 col-lg-6 col-sm-12">
            <div class="p-2 sticky-top">
                <%- include ('../partials/components/create/add-collect-fee') %>
            </div>
        </div>
        <div class="col-xl-8 col-lg-6 col-sm-12 overflow-auto border">
            
          <%- include ('../partials/components/read/view-fee-collection') %>

        </div>
    </div>
</div>
    <!-- closing tags from staff-sidebarMenu -->
</div>
</div>
</div>