<%- include ('../partials/components/staff-sideMenu') %>
<div class="container-fluid p-2">
    <div class="row d-flex justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10 mt-3">
            <% if(locals.err_msg.length > 0) { %>
                <div class="alert alert-danger alert-dismissible fade show mt-5" role="alert">
                    <%= err_msg %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  </div>
            <% } %>
            <% if(locals.success_msg.length > 0) { %>
              <div class="alert alert-success alert-dismissible fade show mt-5" role="alert">
                  <%= success_msg %>
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
          <% } %>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row mt-5 justify-content-center">
        
        <div class="col-xl-8 col-lg-8 col-sm-10 overflow-auto border">
            <form id="staff-profile" action="/staff/profile-edit?_method=PUT" method="POST">
                <div class="mt-3 mb-3">
                    <div class="row">
                    <div class="col-12">
                        <h2><%= name %>'s Profile</h2>
                    </div>
            
                    <hr>
                </div></div>
                <div class="mb-3">
                    <label for="staff_Name">Name:</label>
                    <input type="text" class="form-control" name="staffName" id="staffName" value="<%= name %>">
                </div>
                <div class="mb-3">
                    <label for="staff_dob">Date of Birth:</label>
                    <input type="date" class="form-control" name="staff_dob" id="staff_dob" value="<%= date_of_birth %>">
                </div>
                <div class="mb-3">
                    <label for="staff_mobile">Mobile Number:</label>
                    <input type="tel" class="form-control" name="staff_mobile" id="staff_mobile" value="<%= mobile_number %>">
                </div>
                <div class="mb-3">
                    <label for="staff_email">Email:</label>
                    <input type="email" class="form-control" name="staff_email" id="staff_email" value="<%= email %>" disabled>
                </div>
                <div class="mb-3">
                    <label for="staff_qualification">Highest Qualification:</label>
                    <input type="text" class="form-control" name="staff_qualification" id="staff_qualification" value="<%= qualification %>">
                </div>
                <div class="mb-3">
                    <label for="staff_city">City:</label>
                    <input type="text" class="form-control" name="staff_city" id="staff_city" value="<%= city %>">
                </div>
                <div class="mb-3">
                    <label for="staff_state">State Belongs to:</label>
                    <input type="text" class="form-control" name="staff_state" id="staff_state" value="<%= state %>">
                </div>
                <div class="mb-3">
                    <button class="btn btn-secondary" type="submit" value="submit">Update Profile</button>
                </div>
            </form>
        </div>
    </div>
</div>
    <!-- closing tags from school-sidebarMenu -->
</div>
</div>
</div>