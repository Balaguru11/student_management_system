<div class="container p-5">
    <divrow class="d-flex justify-content-center">
        <div class="col-lg-6 col-md-8 col-m-10">
            <% if(locals.err_msg) { %>
                <div class="alert alert-danger" role="alert"><%= err_msg %></div>
                <% } %> <% if(locals.success_msg) { %>
                <div class="alert alert-success" role="success">
                    <%= success_msg %>
                </div>
                <% } %>
            <form id="staff-profile" action="/staff/profile-create" method="POST">
                <div class="mt-3 mb-3">
                    <div class="row">
                    <div class="col-8">
                        <h2>Staff Profile</h2>
                    </div>
        
                    <!-- <div class="col-4">
                        <a class="btn btn-secondary" role="button" href="/staff/profile-edit"></i>Edit Profile</a>
                    </div> -->
                    <hr>
                </div></div>
                <div class="mb-3">
                    <label for="staff_Name">Name:</label>
                    <input type="text" class="form-control" name="staffName" id="staffName">
                </div>
                <div class="mb-3">
                    <label for="staff_dob">Date of Birth:</label>
                    <input type="date" class="form-control" name="staff_dob" id="staff_dob">
                </div>
                <div class="mb-3">
                    <label for="staff_mobile">Mobile Number:</label>
                    <input type="tel" class="form-control" name="staff_mobile" id="staff_mobile">
                </div>
                <div class="mb-3">
                    <label for="staff_email">Email:</label>
                    <input type="email" class="form-control" name="staff_email" id="staff_email" value="<%= staff_email %>" disabled>
                </div>
                <div class="mb-3">
                    <label for="staff_qualification">Highest Qualification:</label>
                    <input type="text" class="form-control" name="staff_qualification" id="staff_qualification" >
                </div>
                <div class="mb-3">
                    <label for="staff_city">City:</label>
                    <input type="text" class="form-control" name="staff_city" id="staff_city">
                </div>
                <div class="mb-3">
                    <label for="staff_state">State Belongs to:</label>
                    <input type="text" class="form-control" name="staff_state" id="staff_state">
                </div>
                <div class="mb-3">
                    <button class="btn btn-secondary" type="submit" value="submit">Save Profile</button>
                </div>
            </form>
        </div>
    </divrow>
</div>