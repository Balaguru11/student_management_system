<div class="container p-5">
    <divrow class="d-flex justify-content-center">
        <div class="col-lg-6 col-md-8 col-m-10">
            <% if(locals.err_msg) { %>
                <div class="alert alert-danger" role="alert"><%= err_msg %></div>
                <% } %> <% if(locals.success_msg) { %>
                <div class="alert alert-success" role="success">
                    <%= success_msg %>
                </div>
                <% } %>
            <form id="staff-profile" action="/staff/profile" method="POST">
                <div class="mt-3 mb-3">
                    <h2>Staff Profile</h2>
                    <hr>
                </div>
                <div class="mt-3 mb-3">
                    <label for="staff_UserName">Name:</label>
                    <input type="text" class="form-control" name="staffUserName" id="staffUserName">
                </div>
                <div class="mb-3">
                    <label for="staff_Password">Staff Password:</label>
                    <input type="password" class="form-control" name="staffPassword" id="staffPassword">
                </div>
                <div class="mb-3">
                    <button class="btn btn-secondary" type="submit" value="submit">Save Profile</button>
                </div>
            </form>
        </div>
    </divrow>
</div>